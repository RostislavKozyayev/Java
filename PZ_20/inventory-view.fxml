<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pz_db.controller.InventoryController">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>

    <!-- Заголовок -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Складской учет (CRUD)" style="-fx-font-weight: bold;">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="totalValueLabel" style="-fx-font-weight: bold; -fx-text-fill: blue;" />
        <Button text="Аналитика" onAction="#handleShowAnalytics" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </HBox>

    <Separator />

    <!-- Форма для ввода данных -->
    <VBox spacing="10" style="-fx-padding: 10;">
        <Label text="Добавление/Редактирование товара:" style="-fx-font-weight: bold;" />

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
                <RowConstraints minHeight="30" prefHeight="30" vgrow="SOMETIMES" />
            </rowConstraints>

            <!-- Первая строка -->
            <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="idField" promptText="Автоматически" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Название:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <TextField fx:id="nameField" promptText="Введите название" GridPane.columnIndex="3" GridPane.rowIndex="0" />

            <!-- Вторая строка -->
            <Label text="Цена:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="priceField" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Количество:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <TextField fx:id="quantityField" promptText="0" GridPane.columnIndex="3" GridPane.rowIndex="1" />

            <!-- Третья строка -->
            <Label text="Категория:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <ComboBox fx:id="categoryComboBox" promptText="Выберите категорию" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Поставщик:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <ComboBox fx:id="supplierComboBox" promptText="Выберите поставщика" GridPane.columnIndex="3" GridPane.rowIndex="2" />
        </GridPane>

        <!-- Кнопки управления -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Создать" onAction="#handleCreate" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="100" />
            <Button text="Обновить" onAction="#handleUpdate" style="-fx-background-color: #2196F3; -fx-text-fill: white;" prefWidth="100" />
            <Button text="Удалить" onAction="#handleDelete" style="-fx-background-color: #f44336; -fx-text-fill: white;" prefWidth="100" />
            <Button text="Очистить" onAction="#clearForm" prefWidth="100" />
        </HBox>
    </VBox>

    <Separator />

    <!-- Таблица товаров -->
    <VBox VBox.vgrow="ALWAYS" spacing="10" style="-fx-padding: 10;">
        <Label text="Список товаров:" style="-fx-font-weight: bold;" />

        <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" minWidth="50" />
                <TableColumn fx:id="nameColumn" text="Название" minWidth="200" />
                <TableColumn fx:id="priceColumn" text="Цена" minWidth="100" />
                <TableColumn fx:id="quantityColumn" text="Количество" minWidth="100" />
                <TableColumn fx:id="categoryColumn" text="Категория" minWidth="150" />
                <TableColumn fx:id="supplierColumn" text="Поставщик" minWidth="150" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Обновить данные" onAction="#loadProducts" />
        </HBox>
    </VBox>

    <!-- Статусная строка -->
    <Separator />
    <Label fx:id="statusLabel" style="-fx-padding: 5;" />
</VBox>