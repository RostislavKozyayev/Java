<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pz_db.controller.AnalyticsController">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>

    <!-- Заголовок -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Сводная аналитика" style="-fx-font-weight: bold;">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
    </HBox>

    <Separator />

    <!-- Общая информация -->
    <VBox spacing="10" style="-fx-padding: 10;">
        <Label fx:id="totalValueLabel" style="-fx-font-weight: bold; -fx-font-size: 16;" />
    </VBox>

    <Separator />

    <!-- Таблица по категориям -->
    <VBox VBox.vgrow="ALWAYS" spacing="10" style="-fx-padding: 10;">
        <Label text="Количество товаров по категориям:" style="-fx-font-weight: bold;" />

        <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="categoryNameColumn" text="Категория" minWidth="200" />
                <TableColumn fx:id="totalQuantityColumn" text="Общее количество" minWidth="150" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <!-- Статусная строка -->
    <Separator />
    <Label fx:id="statusLabel" style="-fx-padding: 5;" />
</VBox>