<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app_javafx.controller.LoginController">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Вход в систему" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="200"/>
        </columnConstraints>

        <Label text="Логин:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Пароль:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="statusLabel" style="-fx-font-size: 12;" visible="false"/>

    <Button fx:id="loginButton" text="Войти" onAction="#onLoginButtonClick"
            style="-fx-font-size: 14; -fx-pref-width: 100;"/>

    <HBox alignment="CENTER" spacing="5">
        <Label text="Нет аккаунта?"/>
        <Button text="Зарегистрироваться" onAction="#onRegisterLinkClick"
                style="-fx-background-color: transparent; -fx-text-fill: blue;"/>
    </HBox>
</VBox>