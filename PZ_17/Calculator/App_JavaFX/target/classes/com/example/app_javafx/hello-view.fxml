<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app_javafx.CalculatorController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
  <TextField fx:id="displayField" prefHeight="25.0" prefWidth="137.0" />
  <GridPane prefHeight="135.0" prefWidth="94.0">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <Button mnemonicParsing="false" onAction="#handleButton" text="4" GridPane.rowIndex="1" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="1" GridPane.rowIndex="2" />
    <Button mnemonicParsing="false" onAction="#handleClear" text="C" GridPane.rowIndex="3" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="8" GridPane.columnIndex="1" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="2" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="9" GridPane.columnIndex="2" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="3" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Button mnemonicParsing="false" onAction="#handleEquals" text="=" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="+" GridPane.columnIndex="3" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="*" GridPane.columnIndex="3" GridPane.rowIndex="2" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="/" GridPane.columnIndex="3" GridPane.rowIndex="3" />
    <Button mnemonicParsing="false" onAction="#handleButton" text="7" />
  </GridPane>
</VBox>
