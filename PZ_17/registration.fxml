<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app_javafx.controller.RegistrationController">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Регистрация" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="150"/>
            <ColumnConstraints prefWidth="200"/>
        </columnConstraints>

        <Label text="Имя пользователя:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Пароль:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Подтверждение:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="statusLabel" style="-fx-font-size: 12;" visible="false"/>

    <Button fx:id="registerButton" text="Зарегистрироваться" onAction="#onRegisterButtonClick"
            style="-fx-font-size: 14; -fx-pref-width: 150;"/>

    <HBox alignment="CENTER" spacing="5">
        <Label text="Уже есть аккаунт?"/>
        <Button text="Войти" onAction="#onLoginLinkClick"
                style="-fx-background-color: transparent; -fx-text-fill: blue;"/>
    </HBox>
</VBox>