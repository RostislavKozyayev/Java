<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app_javafx.controller.ToDoController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Менеджер задач" />

    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="taskInput" prefWidth="250" promptText="Введите новую задачу..." />
        <Button fx:id="addButton" onAction="#addTask" style="-fx-font-size: 14; -fx-pref-width: 100;" text="Добавить" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-font-size: 14;" text="Фильтр:" />
        <ChoiceBox fx:id="filterChoiceBox" prefWidth="150" />
        <Button fx:id="removeButton" onAction="#removeTask" style="-fx-font-size: 14; -fx-pref-width: 150;" text="Удалить выбранное" />
    </HBox>

    <ListView fx:id="taskListView" prefHeight="300" prefWidth="400" />
</VBox>
