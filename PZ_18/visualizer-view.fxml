<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app_javafx.controller.VisualizerController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Визуализатор числовых данных" />

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="valueInput" prefWidth="150" promptText="Введите число..." />
        <Button fx:id="addButton" onAction="#addValue" style="-fx-font-size: 14; -fx-pref-width: 100;" text="Добавить" />
        <Button fx:id="sortAscButton" onAction="#sortAscending" style="-fx-font-size: 14; -fx-pref-width: 120;" text="Сортировать ↑" />
        <Button fx:id="sortDescButton" onAction="#sortDescending" style="-fx-font-size: 14; -fx-pref-width: 120;" text="Сортировать ↓" />
        <Button onAction="#clearChart" style="-fx-font-size: 14; -fx-pref-width: 100; -fx-text-fill: red;" text="Очистить" />
    </HBox>

    <LineChart fx:id="lineChart" prefHeight="400" prefWidth="600">
        <xAxis>
            <CategoryAxis fx:id="xAxis" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" />
        </yAxis>
    </LineChart>
</VBox>
